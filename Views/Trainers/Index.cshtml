@model IEnumerable<TrainingManagementSystem.Models.CourseTrainer>
@{
    ViewBag.Title = "Index";
}

<h2>Courses I'm Teaching</h2>

@using (Html.BeginForm("Index", "Trainers", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { placeholder = "Search by Name ..." })
        <button type="submit"><i class="fa fa-search"></i>Search</button>
    </div>
}
<div class="form-group">
    @Html.ActionLink(
        "My Course Report",
        "Report",
        "Trainers",
        null,
        new { @class = "btn btn-default" }
        )
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Course.Id</td>
                <td>@course.Course.Name</td>
                <td>@course.Course.Description</td>
                <td>@course.Course.Category.Name</td>
                <td>
                    @Html.ActionLink(
                        "Details",
                        "Details",
                        "Courses",
                        new { id = course.Course.Id },
                        new { @class = "btn btn-primary" }
                        )
                </td>
            </tr>
        }
    </tbody>
</table>