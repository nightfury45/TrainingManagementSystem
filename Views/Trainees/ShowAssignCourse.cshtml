@model IEnumerable<TrainingManagementSystem.Models.CourseTrainee>
@{
    ViewBag.Title = "ShowAssignCourse";
}

<h2>ShowAssignCourse</h2>

@using (Html.BeginForm("ShowAssignCourse", "Trainees", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { placeholder = "Search by Name ..." })
        <button type="submit"><i class="fa fa-search"></i>Search</button>
    </div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Course.Id</td>
                <td>@course.Course.Name</td>
                <td>@course.Course.Description</td>
                <td>@course.Course.Category.Name</td>
                <td>
                    @Html.ActionLink(
                        "Details",
                        "Details",
                        "Trainees",
                        new { id = course.Course.Id },
                        new { @class = "btn btn-primary" }
                        )
                </td>
            </tr>
        }
    </tbody>
</table>